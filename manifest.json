{
    "manifest_version": 2,
    "name": "豆瓣FM",
    "version": "1.0.2",
    "description": "http://douban.fm/radio",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png"
        },
        "default_title": "豆瓣FM"
    },
    "options_page": "options.html",
    "background": { "scripts": ["background.js"] },
    "permissions": [
        "http://*.douban.fm/*"
    ]
}